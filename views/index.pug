extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Karen Shea's Portfolio

      p.lead.text-light
        | A journey through the Treehouse Full Stack JavaScript Techdegree Program. All completed projects are posted here to showcase my learning journey.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

     
    each project in projects
      .cell
        a(href=`/projects/${project.id}`)
          img.thumbnail(src=`${project.image_urls[0]}`, height=350, width=550)
          h5= `${project.project_name}`